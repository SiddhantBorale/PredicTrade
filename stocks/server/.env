# Mongo connection string
MONGO_URI=mongodb://localhost:27017/stocks

# Which python to call. Fallback order: PYTHON_CMD -> python -> python3
PYTHON_CMD=python3

# If your Python already writes to MongoDB itself, set this to true to skip CSV import.
PY_WRITES_TO_MONGO=false

# Optional: port for this server (React proxy points here)
PORT=4000
